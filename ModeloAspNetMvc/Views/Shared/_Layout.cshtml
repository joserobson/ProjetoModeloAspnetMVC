<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title> Painel Com Fácil - @ViewBag.Title </title>
	@Styles.Render("~/Content/cssBundle")
	@Scripts.Render("~/bundles/jsBundle")

</head>
<body class="with-side-menu control-panel control-panel-compact">
	@Html.Partial("_Menu")

	<div class="page-content">

        <div id="divLoading" style="display: none" class="spinner">
            <div class="center-div">
                <div class="inner-div">
                    <div class="loader"></div>
                </div>
            </div>
        </div>


        <div class="container-fluid">
            <div id="notificationError">
                @Html.Partial("_Notifications")
            </div>
            
            <div id="loadingDiv" style="display: none;" class="spinner">                
                <div class="center-div">
                    <div class="inner-div">
                        <div class="loader"></div>
                    </div>
                </div>
            </div>

            @RenderBody()
            <hr />
        </div>
	</div>

</body>
</html>
